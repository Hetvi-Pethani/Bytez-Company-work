                                                    <th>Category Name</th>
                                                    <th>Sub Category</th>
                                                    <th>Exsub Category</th>
                                                    <th>Status</th>
                                                    <th class="text-center">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <% exsubcategory.map((exsubcat,index)=>{ %>
                                                    <tr>
                                                        <td>
                                                            <%= ++index %>
                                                        </td>
                                                        <td>
                                                            <h6 class="mb-0">
                                                                <%= exsubcat?.categoryId?.category %>
                                                            </h6>
                                                        </td>
                                                        <td>
                                                            <h6 class="mb-0">
                                                                <%= exsubcat?.subcategoryId?.subcategory %>
                                                            </h6>
                                                        </td>
                                                        <td>
                                                            <h6 class="mb-0">
                                                                <%= exsubcat?.exsubcategory %>
                                                            </h6>
                                                        </td>

                                                        <td>
                                                            <% if (exsubcat?.status==="active" ) { %>
                                                                <a href="#" class="badge bg-light-success f-12">

                                                                    <%= exsubcat?.status %>
                                                                </a>
                                                                <% } else { %>
                                                                    <a href="#" class="badge bg-light-danger f-12">
                                                                        <%= exsubcat?.status %>
                                                                    </a>
                                                                    <% } %>
                                                        </td>



                                                        <td class="text-center">
                                                            <ul class="list-inline me-auto mb-0">

                                                                <li class="list-inline-item align-bottom"
                                                                    data-bs-toggle="tooltip" title="Edit">
                                                                    <a href="#" data-bs-toggle="modal"
                                                                        data-bs-target="#exampleModal<%= exsubcat.id %>"
