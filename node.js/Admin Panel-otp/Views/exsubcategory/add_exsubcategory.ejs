                                <h5 class="modal-title" id="exampleModalLabel"> Edit ExSub Category</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!-- Modal -->

                                <div class="row">
                                    <div class="col-lg-12">

                                        <% if(locals?.message?.success){ %>
