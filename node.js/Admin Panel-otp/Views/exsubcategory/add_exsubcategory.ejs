                                        <p>Are you sure you want to delete category?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Cancel</button>
                                        <a href="/exsubcategory/deleteexsubcategory?id=<%= exsubcat.id %>"
                                            class="btn btn-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%})%>











        </div>
    </section>
    <!-- [ Main Content ] end -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script type="text/javascript">
        const categoryRecord = () => {
            let categoryId = document.getElementById('category').value;

            $.ajax({
                type: 'GET',
                url: `/exsubcategory/ajaxcategorywiserecord?categoryId=${categoryId}`,
                success: function (res) {
                    let subcategories = res.subcategory; // Corrected variable name
                    let options = `<option value="" disabled selected>-- Select SubCategory --</option>`;

                    subcategories.forEach((subcategory) => {
                        options += `<option value="${subcategory?._id}">${subcategory?.subcategory}</option>`;
                    });

                    document.getElementById('subcategory').innerHTML = options;
                },
                error: function (err) {
                    console.error("Error fetching subcategories:", err);
                }
            });
        };
    </script>



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script type="text/javascript">

        const cateRecord = () => {
            let categoryid = document.getElementById('category').value

            $.ajax({
                type: 'GET',
                url: `/exsubcategory/ajaxcategorywiserecord?categoryId=${categoryid}`,


                success: function (res) {
                    let subcategory = res.subcategory
                    let tbl = `<option value="" disable selected>Select a subcategory</option>`
                    subcategory.map((val) => {

                        tbl += `<option value="${val._id}" ${val?._id === "<%= single?.subcategoryId?._id %>" ? 'selected' : ''}>${val?.subcategory}</option>`
                    })
                    document.getElementById('subcategory').innerHTML = tbl
                }
            })
        }
    </script>


    <script>
        function searchTable() {

            let input = document.getElementById("searchInput");
            let filter = input.value.toLowerCase();

            let table = document.getElementById("pc-dt-simple");
            let tr = table.getElementsByTagName("tr");


            for (let i = 1; i < tr.length; i++) {
                let td = tr[i].getElementsByTagName("td")[1];
                if (td) {
                    let txtValue = td.textContent || td.innerText;
                    if (txtValue.toLowerCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    </script>

