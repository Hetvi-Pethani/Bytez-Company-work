                                                                                <% if
                                                                                    (val?.subcategory==single?.subcategoryId?.subcategory)
                                                                                    { %>
                                                                                    <option value="<%= val?.id %>"
                                                                                        selected>
                                                                                        <%= val.subcategory %>
                                                                                    </option>
