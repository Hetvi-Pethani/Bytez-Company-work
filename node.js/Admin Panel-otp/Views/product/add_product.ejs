                                                                            <% subcategory.map((val)=> { %>
                                                                                <% if
                                                                                    (val?.subcategory==single?.subcategoryId?.subcategory)
                                                                                    { %>
                                                                                    <option value="<%= val?.id %>"
                                                                                        selected>
                                                                                        <%= val.subcategory %>
                                                                                    </option>
                                                                                    <% } %>
                                                                                        <% }) %>




                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="form-group row my-3">
                                                                <label
                                                                    class="col-form-label text-lg-start">ExSubCategory</label>
                                                                <div>
                                                                    <div class="typeahead">
                                                                        <select name="exsubcategory" id="exsubcategory"
                                                                            class="form-control">

                                                                            <% exsubcategory.map((val)=> { %>
                                                                                <% if
