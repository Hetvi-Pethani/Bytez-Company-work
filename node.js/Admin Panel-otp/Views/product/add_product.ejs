                                                            <label
                                                                class="col-form-label  text-lg-start">Category</label>
                                                            <div>
                                                                <div class="typeahead">
                                                                    <select name="category" id="category"
                                                                        class="form-control"
                                                                        onchange="categoryRecord()">
