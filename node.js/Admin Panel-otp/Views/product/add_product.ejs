                                                            <input type="hidden" name="editid"
                                                                value="<%= single?.id %>">
                                                            <div class="form-group row my-3">
                                                                <label
                                                                    class="col-form-label text-lg-start">Category</label>
                                                                <div>
                                                                    <div class="typeahead">
                                                                        <select name="category" id="category"
                                                                            class="form-control"
                                                                            onchange="categoryRecord() ">
                                                                            <option value="">-- Select Category
                                                                                --</option>
                                                                            <% category.map((val)=>{ %>
