                                                                        <% category.map((cat,index)=>{%>
                                                                            <option value="<%= cat?.id%>">
                                                                                <%=cat?.category%>
                                                                            </option>
                                                                            <%}) %>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row my-3">
                                                            <label class="col-form-label text-lg-start">Sub
                                                                Category</label>
                                                            <div>
                                                                <div class="typeahead">
                                                                    <select class="form-control"
                                                                        onchange="subcategoryRecord()" id="subcategory"
                                                                        name="subcategory">
                                                                        <option value="">Select a subcategory</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row my-3">
                                                            <label
                                                                class="col-form-label text-lg-start">ExSubCategory</label>
                                                            <div>
                                                                <div class="typeahead">
                                                                    <select name="exsubcategory" id="exsubcategory"
                                                                        class="form-control">
                                                                        <option>-- Select Exsubcategory --</option>
                                                                        <% exsubcategory.map((val)=>{ %>
                                                                            <option value="<%= val.id%>">
                                                                                <% val.exsubcategory %>
                                                                            </option>
                                                                            <% }) %>

                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>


                                                        <div class="form-group row mb-3">
                                                            <label class="col-form-label  text-lg-start">Product</label>
                                                            <div>
                                                                <div class="typeahead">
                                                                    <input class="form-control" name="product"
                                                                        type="text" placeholder="product">
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row mb-3">
                                                            <label class="col-form-label  text-lg-start">Price</label>
                                                            <div>
                                                                <div class="typeahead">
                                                                    <input class="form-control" name="price"
                                                                        type="number" placeholder="Price">
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row mb-3">
                                                            <label
                                                                class="col-form-label  text-lg-start">Description</label>
                                                            <div>
                                                                <div class="typeahead">
                                                                    <input class="form-control" name="description"
                                                                        type="text" placeholder="Description">
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="form-group row mb-3">
                                                            <label class="col-form-label  text-lg-start">Image</label>
                                                            <div>
                                                                <div class="typeahead">
                                                                    <input class="form-control" name="image"
                                                                        type="file">

                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="text-end p-4 pb-sm-2">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Close</button>
                                                            <button type="submit"
                                                                class="btn btn-primary d-inline-flex align-item-center">Submit</button>
                                                            </button>
                                                        </div>

                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                </div>
            </div>
            <!-- [ Main Content ] end -->


            <!-- [ Main Content ] start -->
            <div class="row">
                <!-- [ sample-page ] start -->
                <div class="col-sm-12">

                    <% if(locals?.message?.delete){%>
                        <div class="alert alert-danger" role="alert">
                            <%= locals.message.delete %>
                        </div>
                        <%}%>



                            <div class="card table-card">

                                <div class="card-body">

                                    <div class="table-responsive">
                                        <table class="table table-hover text-center" id="pc-dt-simple">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Category Name</th>
                                                    <th>Sub Category</th>
                                                    <th>Exsub Category</th>
                                                    <th>Product</th>
                                                    <th>Price</th>
                                                    <th>Description</th>
                                                    <th>Image</th>
                                                    <th>Status</th>
                                                    <th class="text-center">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <% product.map((pro,index)=>{ %>
                                                    <tr>
                                                        <td>
                                                            <%= ++index %>
                                                        </td>
                                                        <td>
                                                            <h6 class="mb-0">
                                                                <%= pro?.categoryId?.category %>
                                                            </h6>
                                                        </td>
                                                        <td>
                                                            <h6 class="mb-0">
                                                                <%= pro?.subcategoryId?.subcategory %>
                                                            </h6>
                                                        </td>
                                                        <td>
                                                            <h6 class="mb-0">
                                                                <%= pro?.exsubcategoryId?.exsubcategory%>

                                                            </h6>
                                                        </td>
                                                        <td>
                                                            <h6>
                                                                <%= pro?.product %>
                                                            </h6>
                                                        </td>
                                                        <td>
                                                            <h6>
                                                                <%= pro?.price %>
                                                            </h6>
                                                        </td>
                                                        <td>
                                                            <h6>
                                                                <%= pro?.description %>
                                                            </h6>
                                                        </td>
                                                        <td>
                                                            <img src="/uploads/<%= pro.image %>" alt="image"
